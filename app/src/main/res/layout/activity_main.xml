<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:text="Sample"
        />


    <com.pradip.slidebuttonlibrary.SlideToConfirm
        android:id="@+id/slide_to_confirm_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/sample_text"
        android:layout_gravity="center_vertical"
        android:layout_margin="40dp"
        app:border_radius="8dp"
        app:border_width="0dp"
        app:slider_background_color="#DBDBDB"
        app:slider_color="@color/colorAccent1"
        app:slider_lottie="lottie_x.json"
        app:slider_width="80dp"
        app:slider_reset_duration="300"
        app:slider_vibration_duration="50"
        app:slider_threshold="1dp"
        app:engage_text="Slide To Bet"
        app:engage_text_size="22sp"
        app:engage_text_color="#B3000000"
        app:engaged_text_font="@font/pro_solid"
        app:completed_text="Bet placed !"
        app:completed_text_color="@android:color/white"
        app:completed_text_size="20sp"
        tools:context=".MainActivity">
</com.pradip.slidebuttonlibrary.SlideToConfirm>



</androidx.constraintlayout.widget.ConstraintLayout>